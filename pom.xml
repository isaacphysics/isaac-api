            <dependency>
                <groupId>commons-codec</groupId>
                <artifactId>commons-codec</artifactId>
                <version>1.5</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <!-- Profiles configuration -->
    <profiles>
        <profile>
            <id>local</id>
            <!-- local profile is active by default to help eclipse know what is going
                on -->
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <build.profile.id>local</build.profile.id>
            </properties>
            <build>
                <resources>
                    <resource>
                        <filtering>true</filtering>
                        <directory>src/main/resources</directory>
                    </resource>
                </resources>
            </build>
        </profile>

        <profile>
            <id>etl</id>
            <properties>
                <build.profile.id>etl</build.profile.id>
                <web.xml>override-etl-web.xml</web.xml>
            </properties>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.eclipse.jetty</groupId>
                        <artifactId>jetty-maven-plugin</artifactId>
                        <version>${jetty-maven-version}</version>
                        <configuration>
                            <webApp>
                                <contextPath>/isaac-api</contextPath>
                                <overrideDescriptor>override-etl-web.xml</overrideDescriptor>
                                <webInfIncludeJarPattern>^$</webInfIncludeJarPattern>
                                <containerIncludeJarPattern>^$</containerIncludeJarPattern>
                            </webApp>
                            <systemProperties>
                                <systemProperty>
                                    <name>jetty.port</name>
                                    <value>${jetty.port.etl}</value>
                                </systemProperty>
                                <systemProperty>
                                    <name>config.location</name>
                                    <value>${config.location}</value>
                                </systemProperty>
                                <systemProperty>
                                    <name>log.path</name>
                                    <value>${log.path}</value>
                                </systemProperty>
                                <systemProperty>
                                    <name>segue.version</name>
                                    <value>${segue.version}</value>
                                </systemProperty>
                            </systemProperties>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
